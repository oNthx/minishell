#include <minishell.h>

char	*cd(char *str)
{
	char	*currentpwd;
	char	*oldpwd;
	t_envp	*envl;

	envl = malloc(sizeof(t_envl));
	if (!envl)
		return (0);
	currentpwd = pwd();
	if (ft_strcmp(str, "/") == 0)
	{
		envl->fullstr = chdir(getenv("HOME"));
		
	}
}
